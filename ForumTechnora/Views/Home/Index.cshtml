@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TopNavbar.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="description" content="Teknoloji konularını barındıran paylaşım ve haber forumu">
    <meta name="keywords" content="teknoloji, forum, yazılım, post, haber, soru, cevap">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ana Sayfa</title>
    <style>
        aside {
            width: 30%;
            padding-left: 15px;
            margin-left: 15px;
            float: right;
            font-style: italic;
        }
    </style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <aside>
            <div class="d-flex justify-content-end">
                <div class="card" style="width: 16rem;">
                    <img class="card-img-top" src="~/Content/Kız_Kulesi_February_2013_01.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Hava Durumu</h5>
                        <label class="card-text">İSTANBUL: @Session["Weather"]</label>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Piyasalar</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">BIST100: @Session["Bist100"]</li>
                            <li class="list-group-item">DOLAR/TL: @Session["UsdTry"]</li>
                            <li class="list-group-item">EURO/TL: @Session["EurTry"]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </aside>
        <h3>Tarihte Bugün</h3>
        <hr />
        <p>
            @Session["TodayInHistory"]
        </p>
    </div>
</body>
</html>