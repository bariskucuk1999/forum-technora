@using EntityLayer.Concrete
@model List<User>

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_TopNavbar.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="description" content="Teknoloji konularını barındıran paylaşım ve haber forumu">
    <meta name="keywords" content="teknoloji, forum, yazılım, post, haber, soru, cevap">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Profili</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        label {
            color: black;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <section class="section about-section gray-bg" id="about">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-lg-6">
                    <div class="about-text go-to">
                        <h3 class="dark-color">@Session["NickName"]</h3>
                        <hr />
                        <label class="navbar-text">Ad Soyad: @Session["UserName"] @Session["UserLastName"]</label>
                        <div class="row about-list">
                            <div class="col-md-6">
                                <div class="media">
                                    <label>Doğum Tarihi: @Session["UserBirthday"]</label>
                                </div>
                                <div class="media">
                                    <label>Üyelik Oluşturma Tarihi: @Session["CreationDate"]</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="float-right">
                    <div class="about-avatar" style="color: #ff6600;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="144" height="144" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                        </svg>
                    </div>
                </div>
            </div>
            <hr />
            <div class="counter">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="count-data text-center">
                            <h3 class="count h2" data-to="150" data-speed="150">@Session["PostCount"]</h3>
                            <p class="m-0px font-w-600">Post Sayısı</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="count-data text-center">
                            <h3 class="count h2" data-to="850" data-speed="850">@Session["DayMember"]</h3>
                            <p class="m-0px font-w-600">Kaç Gündür Foruma Üye</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>